<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prosper.chasing.game.http.mapper.PropMapper">

	<resultMap id="propMap" type="Prop">
		<result property="id" column="pk_id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="count" column="count" />
		<result property="price" column="price" />
		<result property="unit" column="unit" />
		<result property="state" column="state" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
	</resultMap>

	<select id="selectOne" parameterType="Map" resultMap="propMap">
		SELECT * 
		FROM t_prop
		WHERE pk_id = #{id}
	</select>
	
	<select id="selectListByPage" parameterType="Map" resultMap="propMap">
        SELECT * 
        FROM t_prop
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
    
    <select id="selectListByIds" parameterType="Map" resultMap="propMap">
        SELECT * 
        FROM t_prop
        WHERE pk_id IN
	    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
	        #{item}
	    </foreach>
    </select>
    
    <select id="selectListByName" parameterType="Map" resultMap="propMap">
        SELECT * 
        FROM t_prop
        WHERE name = #{name}
    </select>
    
    <select id="selectListByPageState" parameterType="Map" resultMap="propMap">
        SELECT * 
        FROM t_prop
        <if test="state != null ">
        WHERE
            state = #{state}
        </if>  
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
    
    <insert id="insert" parameterType="Prop" useGeneratedKeys="true" keyProperty="id" keyColumn="pk_id">
		INSERT INTO t_prop
		SET name = #{name},
		    code = #{code},
		    count = #{count},
		    price = #{price},
		    unit = #{unit},
		    state = #{state},
            create_time = #{createTime},
            update_time = #{updateTime}
	</insert>

	<update id="update" parameterType="Prop">
		UPDATE t_prop
        SET name = #{name},
            code = #{code},
            count = #{count},
            price = #{price},
            unit = #{unit},
            state = #{state},
            create_time = #{createTime},
            update_time = #{updateTime}
		WHERE pk_id = #{id}
	</update>

	<delete id="delete" parameterType="Map">
		delete from t_prop
		where pk_id = #{id}
	</delete>
	
</mapper>