<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prosper.chasing.game.http.mapper.UserMapper">

	<resultMap id="userMap" type="User">
		<result property="id" column="pk_id" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="registerTime" column="register_time" />
		<result property="registerIp" column="register_ip" />
		<result property="lastLoginTime" column="last_login_time" />
		<result property="lastLoginIp" column="last_login_ip" />
	</resultMap>

	<select id="selectOne" parameterType="Map" resultMap="userMap">
		SELECT * 
		FROM t_user
		WHERE pk_id = #{id}
	</select>
	
	<select id="selectListByPage" parameterType="Map" resultMap="userMap">
        SELECT * 
        FROM t_user
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
    <select id="selectListByIds" parameterType="Map" resultMap="userMap">
        SELECT * 
        FROM t_user
        WHERE pk_id IN
	    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
	        #{item}
	    </foreach>
    </select>
    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id" keyColumn="pk_id">
		INSERT INTO t_user
		SET name = #{name},
		    email = #{email},
		    phone = #{phone},
		    register_time = #{registerTime},
            register_ip = #{registerIp},
            last_login_time = #{lastLoginTime},
            last_login_ip = #{lastLoginIp}
	</insert>

	<update id="update" parameterType="User">
		UPDATE t_user
		SET name = #{name},
            email = #{email},
            phone = #{phone},
            register_time = #{registerTime},
            register_ip = #{registerIp},
            last_login_time = #{lastLoginTime},
            last_login_ip = #{lastLoginIp}
		WHERE pk_id = #{id}
	</update>

	<delete id="delete" parameterType="Map">
		delete from t_user
		where pk_id = #{id}
	</delete>
	
</mapper>