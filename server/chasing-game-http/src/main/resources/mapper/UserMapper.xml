<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prosper.game.http.mapper.ActionMapper">

	<resultMap id="actionMap" type="Action">
		<result property="id" column="pk_id" />
		<result property="name" column="name" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="registerTime" column="registerTime" />
		<result property="registerIp" column="registerIp" />
		<result property="lastLoginTime" column="lastLoginTime" />
		<result property="lastLoginIp" column="lastLoginIp" />
	</resultMap>

	<select id="selectOne" parameterType="Map" resultMap="actionMap">
		SELECT * 
		FROM t_user
		WHERE pk_id = #{id} and delete_flag = 0
	</select>
	
	<select id="selectListByPage" parameterType="Map" resultMap="actionMap">
        SELECT * 
        FROM t_user
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
    <select id="selectListByIds" parameterType="Map" resultMap="actionMap">
        SELECT * 
        FROM t_user
        WHERE pk_id IN
	    <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
	        #{item}
	    </foreach>
    </select>
    <insert id="insert" parameterType="User" useGeneratedKeys="true" keyProperty="id" keyColumn="pk_id">
		INSERT INTO t_user
		SET name = #{name},
		    email = #{email},
		    phone = #{phone},
		    registerTime = #{registerTime},
		    registerIp = #{registerIp},
		    lastLoginTime = #{lastLoginTime},
		    lastLoginIp = #{lastLoginIp}
	</insert>

	<update id="update" parameterType="Action">
		UPDATE t_user
		SET name = #{name},
            email = #{email},
            phone = #{phone},
            registerTime = #{registerTime},
            registerIp = #{registerIp},
            lastLoginTime = #{lastLoginTime},
            lastLoginIp = #{lastLoginIp}
		WHERE pk_id = #{id}
	</update>

	<delete id="delete" parameterType="Map">
		delete from t_user
		where pk_id = #{id}
	</delete>
	
</mapper>